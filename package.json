{
  "name": "jibun-shiru-app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=jibun-supple-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "bash deploy.sh",
    "deploy:cloudflare": "bash deploy.sh",
    "deploy:cloudrun": "bash deploy-cloudrun.sh",
    "deploy:quick": "npm run build && wrangler pages deploy dist --project-name jibun-supple",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name jibun-supple",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "cf:auth": "bash verify-cloudflare-auth.sh",
    "cf:whoami": "wrangler whoami",
    "cf:project:create": "wrangler pages project create jibun-supple --production-branch main --compatibility-date 2025-12-01",
    "cf:project:list": "wrangler pages project list",
    "cf:secret:list": "wrangler pages secret list --project-name jibun-supple",
    "cf:logs": "wrangler pages deployment tail --project-name jibun-supple",
    "db:create": "wrangler d1 create jibun-supple-production",
    "db:list": "wrangler d1 list",
    "db:migrate:local": "wrangler d1 migrations apply jibun-supple-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply jibun-supple-production",
    "db:seed": "wrangler d1 execute jibun-supple-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.10.7",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  },
  "devDependencies": {
  }
}